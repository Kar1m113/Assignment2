
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 673,
  "height":400,
  "title": {"text":"Timeline of Refugees from 2012-2022", "color":"white"},
  "data": {
  "url": "https://raw.githubusercontent.com/Kar1m113/Assignment2/main/5CountriesRefugeesChanged.csv"
  },
  "selection": {
    "continent_highlight": {
    "type": "multi",
    "fields": ["Country of asylum (ISO)"],
    "bind": "legend"
  }
  },
  "mark":{"type": "line","point":"true"},
  "encoding": {
    "x":{
      "field":"Year",
      "type": "nominal"
    } ,
    "y":{
      "field":"RefugeesTotal",
      "type": "quantitative",
      "scale":{"type": "linear"},
      "title":"Number of Refugees"
    },
    "color":{
      "field":"Country of asylum (ISO)",
      "title":"Country of Asylum",
      "type": "nominal",
      "scale":{
        "domain":[
        "AUS",
        "MYS",
        "USA",
        "GBR",
        "NLD"
        ],
      "range":[
        "#FF7700",
        "#235789",
        "#4000FF",
        "#F1D302",
        "#020100"
      ]
      }
    },
    "opacity":{
      "condition":{"selection":"continent_highlight", "value":0.6},
      "value":0
    },
    "tooltip":[
      {"field":"RefugeesTotal", "type": "quantitative","title":"Number of Refugees in Total"},
      {"field":"Year","type":"nominal","title":"Year"},
      {"field":"CountryOfAsylum","type": "nominal","title":"Country of Asylum"}
    ]
  },
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
  }